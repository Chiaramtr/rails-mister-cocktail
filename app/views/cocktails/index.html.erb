<div class="banner" style="background-image: url(https://madeinmarseille.net/actualites-marseille/2017/06/shamrock-side-bar-cocktail-vieux-port.jpg);">
  <div class="container">
    <div class="row justify-content-center">
      <h1>List of cocktails</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
      <p> <%= link_to "Add an cocktail", new_cocktail_path %></p>
      <div class="row">
          <% @cocktails.each do |cocktail| %>
            <div class="col-4">
              <div class="cocktail_card">
                  <p> <%= link_to cocktail.name, cocktail_path(cocktail) %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
</div>



